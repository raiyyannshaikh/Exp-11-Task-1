#include <stdio.h>

struct employee {
    int id;
    char name[50];
    float salary;
};

int main() {
    struct employee emp;
    FILE *fp;
    int n, i;

    // Works in Programiz: memory-based file
    fp = tmpfile();  
    if (fp == NULL) {
        printf("Error opening temporary file!\n");
        return 1;
    }

    printf("Enter number of employees: ");
    scanf("%d", &n);

    printf("\nEnter employee details:\n");
    for (i = 0; i < n; i++) {
        printf("\nEmployee %d\n", i + 1);

        printf("Enter ID: ");
        scanf("%d", &emp.id);

        printf("Enter Name: ");
        scanf("%s", emp.name);

        printf("Enter Salary: ");
        scanf("%f", &emp.salary);

        // Write to temp file
        fprintf(fp, "%d %s %.2f\n", emp.id, emp.name, emp.salary);
    }

    // Move file pointer to start
    rewind(fp);

    printf("\n--- Employee Database ---\n");
    while (fscanf(fp, "%d %s %f", &emp.id, emp.name, &emp.salary) != EOF) {
        printf("ID: %d\tName: %s\tSalary: %.2f\n", emp.id, emp.name, emp.salary);
    }

    fclose(fp);
    return 0;
}
